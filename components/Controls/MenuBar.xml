<?xml version="1.0" encoding="UTF-8"?>
<component name="MenuBar" extends="Rectangle" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="https://devtools.web.roku.com/schema/RokuSceneGraph.xsd">
  <children>
    <Group id="gButtons" />
  </children>

  <interface>
    <field id="buttons" type="stringarray" onChange="onButtonsChange" />
    <field id="horizSpacing" type="integer" value="10" onChange="onLayoutChange" />

    <field id="selectedButton" type="node" />
    <field id="selectedButtonIndex" type="integer" alwaysNotify="true" />
  </interface>

  <script type="text/brightscript" uri="MenuBar.brs" />
</component>
