<?xml version="1.0" encoding="UTF-8"?>
<component name="MainScene" extends="Scene" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="https://devtools.web.roku.com/schema/RokuSceneGraph.xsd">
  <children>
    <Group id="gMainMenu" visible="false">
      <Poster id="pBackground" />
      <MenuBar id="mbMenuBar" color="0x12121260" />
    </Group>

    <Group id="gViews" />

    <BusySpinner id="bsLoading" uri="pkg:/images/spinner.png" />
    <Animation id="aFadeMenu" duration="0.70" repeat="false" easeFunction="linear">
      <FloatFieldInterpolator id="aFadeMenuValue" key="[0.0, 0.5, 1.0]" keyValue="[0, 1, 1]" fieldToInterp="gMainMenu.opacity" />
      <FloatFieldInterpolator id="aFadeMenuValue2" key="[0.0, 0.5, 1.0]" keyValue="[1, 1, 0]" fieldToInterp="bsLoading.opacity" />
    </Animation>
    <Animation id="aFadeView" duration="0.35" repeat="false" easeFunction="linear" />
  </children>

  <interface>
    <function name="LogMessage" />
    <function name="PlayVideo" />
    <function name="ShowItem" />
  </interface>

  <script type="text/brightscript" uri="MainScene.brs" />
  <script type="text/brightscript" uri="Libs/Utilities.brs" />
</component>
