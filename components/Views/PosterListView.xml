<?xml version="1.0" encoding="UTF-8"?>
<component name="PosterListView" extends="Group" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="https://devtools.web.roku.com/schema/RokuSceneGraph.xsd">
  <children>
    <Rectangle id="pBackgroundRect" color="0x323232FF" />
    <Poster id="pBackgroundImage" opacity="0.25" loadDisplayMode="scaleToFill" />
    <Label id="lTitle" horizAlign="center" font="font:LargeBoldSystemFont" />
    <Poster id="pItemImage" />
    <Label id="lItemDetailLeft" font="font:SmallestSystemFont" />
    <Label id="lItemDetailRight" horizAlign="right" font="font:SmallestSystemFont" />
    <Label id="lItemDescription" wrap="true" font="font:SmallestSystemFont" />

    <!-- Roughtly 25 pixels left edge and right edge -->
    <LabelList id="llMenu" numRows="10">
      <ContentNode id="cnMenuContent" role="content" />
    </LabelList>

    <BusySpinner id="bsLoading" uri="pkg:/images/spinner.png" />
  </children>

  <interface>
    <field id="uri" type="string" onChange="onUriChange" />
    <field id="mainScene" type="node" />
  </interface>

  <script type="text/brightscript" uri="PosterListView.brs" />
  <script type="text/brightscript" uri="pkg:/source/Utilities.brs" />
</component>
